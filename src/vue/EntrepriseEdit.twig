<div id="corps">

    <div class="container">
        <h2>{{ entreprise.raison_sociale }}</h2>
        <div>
            <h3>Entrée</h3>
            <p>Nom de l'entreprise : {{ entreprise.raison_sociale }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Nom du contact : {{ entreprise.nom_contact }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Nom du responsable : {{ entreprise.nom_resp }} <input type="text" value="{{ etudiant.nom }}"></p>
        </div>
        <div>
            <h3>Contact</h3>
            <p>Rue : {{ entreprise.rue_entreprise }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Code postal : {{ entreprise.cp_entreprise }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Ville : {{ entreprise.ville_entreprise }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Téléphone : {{ entreprise.tel_entreprise }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Fax : {{ entreprise.fax_entreprise }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Email : {{ entreprise.email }} <input type="text" value="{{ etudiant.nom }}"></p>
        </div>
        <div>
            <h3>Divers</h3>
            <p>Observation : {{ entreprise.observation }} <input type="text" value="{{ etudiant.nom }}"></p>
            <p>URL : <a href="{{ entreprise.site_entreprise }}">{{ entreprise.site_entreprise }}</a> <input type="text" value="{{ etudiant.nom }}"></p>
            <p>Niveau : {{ entreprise.niveau }} <input type="text" value="{{ etudiant.nom }}"></p>
        </div>
        <div>   
            <h3>Spécialité</h3>
            <p>Spécialité : {{ entreprise.specialite }} <input type="text" value="{{ etudiant.nom }}"></p>
        </div>
