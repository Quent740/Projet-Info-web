<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Accueil - Stage BTS</title>
    <link rel="stylesheet" href="CSS/general.css">
</head>
<body>

<!-- Menu de navigation -->
<nav>
    <a href="index.php?action=Accueil" id="onglet_accueil" class="actif"><span>Accueil</span></a>
    <a href="index.php?action=Entreprise" id="onglet_entreprise"><span>Entreprise</span></a>
    <a href="index.php?action=Stagiaire" id="onglet_stagiaire"><span>Stagiaire</span></a>
    <a href="index.php?action=Inscrire" id="onglet_inscrire"><span>Inscription</span></a>
    <a href="index.php?action=Aide" id="onglet_aide"><span>Aide</span></a>
    <a href="index.php?action=Deconnection" id="onglet_deconnection"><span>Déconnexion</span></a>

    <!-- Boutons pour réduire/développer le menu -->
    <div class="bottom">
        <a href="#" id="icon_droite"><span></span></a>
        <a href="#" id="icon_gauche"><span></span></a>
    </div>
</nav>

<!-- Zone de contenu principal -->
<div id="corps">
    <form action="{{ action_url }}" method="post" id="form_connexion">
        <div class="section" id="section_connexion">
            {% if error_message %}
                <p class="error">{{ error_message }}</p>
            {% endif %}

            <label for="login">Identifiant :</label>
            <input type="text" name="login" id="login" required>

            <label for="mdp">Mot de passe :</label>
            <input type="password" name="mdp" id="mdp" required>

            <label for="role">Je suis :</label>
            <select name="role" id="role" required>
                <option value="eleve">Élève</option>
                <option value="enseignant">Enseignant</option>
            </select>
        </div>

        <div class="action">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>

</div>

</body>
</html>