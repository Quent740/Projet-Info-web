<div class="container">
    <h2>Fiche Étudiant</h2>
    <form method="post" action="/path/to/submit">
        <fieldset>
            <legend>Informations sur l'étudiant</legend>
            <label>Nom :</label>
            <input type="text" value="{{ etudiant.nom }}">
            <label>Prénom :</label>
            <input type="text" value="{{ etudiant.prenom }}">
            <label>Nom d'utilisateur :</label>
            <input type="text" minlength="8" value="{{ etudiant.utilisateur }}">
            <label>Mot de passe :</label>
            <input type="password">
            <label>Date d'obtention du BTS :</label>
            <input type="date" value="{{ etudiant.date_obtention }}">
            <label>Classe :</label>
            <select>
                <option>AM1</option>
                <option>AM2</option>
            </select>
        </fieldset>
        <button type="submit">Ajouter</button>
    </form>
</div>
