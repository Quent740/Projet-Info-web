<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des stagiaire</title>
    <link rel="stylesheet" href="CSS/general.css">
    <link rel="stylesheet" href="CSS/bouton.css">
    <link rel="stylesheet" href="CSS/tableau.css">
</head>
<body>

<!-- Menu de navigation -->
<nav>
    <a href="index.php?action=Accueil" id="onglet_accueil"><span>Accueil</span></a>
    <a href="index.php?action=Entreprise" id="onglet_entreprise"><span>Entreprise</span></a>
    <a href="index.php?action=Stagiaire" id="onglet_stagiaire" class="actif"><span>Stagiaire</span></a>
    <a href="index.php?action=inscrireStage" id="onglet_inscrire"><span>Inscription</span></a>
    <a href="index.php?action=Aide" id="onglet_aide"><span>Aide</span></a>
    <a href="index.php?action=Deconnection" id="onglet_deconnection"><span>Déconnexion</span></a>

    <!-- Boutons pour réduire/développer le menu -->
    <div class="bottom">
        <a href="#" id="icon_droite"><span></span></a>
        <a href="#" id="icon_gauche"><span></span></a>
    </div>
</nav>

<!-- Contenu principal -->
<div id="corps">
    <div class="container">
        <h1>Liste des etudiants</h1>

        <!-- Bouton pour ajouter une nouvelle entreprise -->
        <div class="large_bouton_operation">
            <a href="index.php?action=InscrireStagiaire" class="icon_ajouter">Ajouter un etudiant</a>
        </div>

        <!-- Tableau des entreprises -->
        <table border="1" cellpadding="10" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Opération</th>
                    <th>Etudiant</th>
                    <th>Entreprise</th>
                    <th>Prof</th>
                </tr>
            </thead>
            <tbody>
                {% if etudiants|length > 0 %}
                    {% for etudiant in etudiants %}
                        <tr>
                            <!-- Boutons pour modifier et supprimer -->
                            <td style="text-align: center;" class="bouton_operation">
                                <a href="index.php?action=1Stagiaire&id={{ etudiant.num_etudiant }}" class="icon_voir" title="Voir"></a>
                                <a href="index.php?action=editStagiaire&id={{ etudiant.num_etudiant }}" class="icon_modifier" title="Modifier"></a>
                                <a href="index.php?action=deleteStagiaire&id={{ etudiant.num_etudiant }}" class="icon_supprimer" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette etudiant ?');"></a>
                            </td>
                            <!-- Informations sur l'entreprise -->
                            <td>{{ etudiant.nom_etudiant }} {{ etudiant.prenom_etudiant }}</td>
                            <td>{{ etudiant.num_entreprise }}</td>
                            <td>{{ etudiant.nom_prof }} {{ etudiant.prenom_prof }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" style="text-align: center;">Aucune entreprise trouvée.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>


</body>
</html>
