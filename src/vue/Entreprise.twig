<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entreprise-liste</title>
    <link rel="stylesheet" href="CSS/general.css">

    <link rel="stylesheet"  href=CSS/bouton.css">

</head>
<body>


<div class="container">
    <h1>Liste des entreprises</h1>

    <!-- Bouton pour ajouter une nouvelle entreprise -->
    <div class="large_bouton_operation">
        <a href="index.php?action=Entrepriseajout" class="icon_ajouter">Ajouter une entreprise</a>
    </div>

    <!-- Table pour afficher les entreprises -->
    <table border="1" cellpadding="10" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Opération</th>
            <th>Entreprise</th>
            <th>Responsable</th>
            <th>Adresse</th>
            <th>Site</th>
            <th>Spécialité</th>
        </tr>
        </thead>
        <tbody>
        {% if entreprises|length > 0 %}
            {% for entreprise in entreprises %}
                <tr>
                    <!-- Boutons pour modifier et supprimer -->
                    <td style="text-align: center;" class="bouton_operation">
                        <a href="index.php?action=editEntreprise&id={{ entreprise.id }}" class="icon_modifier" title="Modifier"></a>
                        <a href="index.php?action=deleteEntreprise&id={{ entreprise.id }}"
                           class="icon_supprimer"
                           title="Supprimer"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette entreprise ?');"></a>
                    </td>

                    <!-- Détails de l'entreprise -->
                    <td>{{ entreprise.nom }}</td>
                    <td>{{ entreprise.responsable }}</td>
                    <td>{{ entreprise.adresse }}</td>

                    <!-- Lien vers le site web -->
                    <td style="text-align: center;">
                        {% if entreprise.site %}
                            <a href="{{ entreprise.site }}" class="icon_website" target="_blank" title="Voir le site"></a>
                        {% else %}
                            -
                        {% endif %}
                    </td>

                    <td>{{ entreprise.specialite }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <!-- Message si aucune entreprise n'est disponible -->
            <tr>
                <td colspan="6" style="text-align: center;">Aucune entreprise trouvée.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>
