        <a href="#" id="icon_droite"><span></span></a>
        <a href="#" id="icon_gauche"><span></span></a>
    </div>
</nav>

<!-- Contenu principal -->
<div id="corps">
    <div class="container">
        <h2>Mise à jour de l'étudiant : {{ etudiant.nom_etudiant }}</h2>

        <!-- Formulaire de mise à jour -->
        <form action="index.php?action=updateStagiaire&id={{ etudiant.num_etudiant }}" method="post">
            <div>
                <h3>Informations de l'étudiant</h3>
                <label for="nom_etudiant">Nom :</label>
                <input type="text" name="nom_etudiant" id="nom_etudiant" value="{{ etudiant.nom_etudiant }}" required>

                <label for="prenom_etudiant">Prénom :</label>
                <input type="text" name="prenom_etudiant" id="prenom_etudiant" value="{{ etudiant.prenom_etudiant }}" required>

                <label for="annee_obtention">Année d'obtention :</label>
                <input type="text" name="annee_obtention" id="annee_obtention" value="{{ etudiant.annee_obtention }}" required>

                <label for="login">Login :</label>
                <input type="text" name="login" id="login" value="{{ etudiant.login }}" required>

                <label for="mdp">Mot de passe :</label>
                <input type="text" name="mdp" id="mdp" value="{{ etudiant.mdp }}" required>

                <label for="num_classe">Numéro de classe :</label>
                <input type="text" name="num_classe" id="num_classe" value="{{ etudiant.num_classe }}" required>
            </div>
        </form>
    </div>
</div>

</body>
