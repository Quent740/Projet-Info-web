<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fiche Étudiant</title>
    <link rel="stylesheet" href="CSS/general.css">
</head>
<body>

<!-- Menu de navigation -->
<nav>
    <a href="index.php?action=Accueil" id="onglet_accueil"><span>Accueil</span></a>
    <a href="index.php?action=Entreprise" id="onglet_entreprise"><span>Entreprise</span></a>
    <a href="index.php?action=Stagiaire" id="onglet_stagiaire"><span>Stagiaire</span></a>
    <a href="index.php?action=InscrireStagiaire" id="onglet_inscrire" class="actif"><span>Inscription</span></a>
    <a href="index.php?action=Aide" id="onglet_aide"><span>Aide</span></a>
    <a href="index.php?action=Deconnection" id="onglet_deconnection"><span>Déconnexion</span></a>

    <div class="bottom">
        <a href="#" id="icon_droite"><span></span></a>
        <a href="#" id="icon_gauche"><span></span></a>
    </div>
</nav>

<!-- Zone de contenu principal -->
<div id="corps">
    <header>
        <h1>Informations concernant l'étudiant</h1>
    </header>

    <hr>

    <form action="{{ action_url }}" method="post" id="form_etudiant">
        <div class="section" id="section_etudiant">
            {% if success_message %}
                <p class="success">{{ success_message }}</p>
            {% endif %}
            {% if error_message %}
                <p class="error">{{ error_message }}</p>
            {% endif %}

            <label for="nom_etudiant">Nom* :</label>
            <input type="text" name="nom_etudiant" id="nom_etudiant" required>

            <label for="prenom_etudiant">Prénom* :</label>
            <input type="text" name="prenom_etudiant" id="prenom_etudiant" required>

            <label for="login">Login (8 caractères)* :</label>
            <input type="text" name="login" id="login" maxlength="8" required>

            <label for="mdp">Mot de passe (entre 8 et 30 caractères)* :</label>
            <input type="password" name="mdp" id="mdp" minlength="8" maxlength="30" required>

            <label for="annee_obtention">Date d'obtention du BTS (AAAA-MM-JJ)* :</label>
            <input type="date" name="annee_obtention" id="annee_obtention" required>

            <label for="num_classe">Numéro de Classe* :</label>
            <input type="number" name="num_classe" id="num_classe" required>

            <p class="info">Les champs comportant le symbole * sont obligatoires</p>
        </div>

        <div class="action">
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    </form>
</div>

</body>
</html>
